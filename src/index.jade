!!! 5
html(data-ng-app="dsa", lang="en")
  head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Data Structures and Algorithms
    link(href="../css/dsa.css", rel="stylesheet", type="text/css")
  body
    main.container(data-ng-controller="AppCtrl")
      .row
        .col-md-12
          nav.navbar.navbar-default
            ul.nav.navbar-nav
              li
                a(href="#") Sorting
      .row
        .col-md-12
          a(href="#") Bubble
          a(href="#") Bucket
          a(href="#") Counting
          a(href="#") Heap
          a(href="#") Insertion
          a(href="#") Merge
          a(href="#") Quick
          a(href="#") Radix
          a(href="#") Selection
          a(href="#") Shell
      .row
        .col-md-12
          #dsa1.text-center
      .row
        .col-md-12
          .text-center
            .btn-group
              button.btn-btn-default(type="button", title="play", data-ng-click="play()")
                i.fa.fa-play
              button.btn-btn-default(type="button", title="pause", data-ng-click="pause()")
                i.fa.fa-pause
            .btn-group
              button.btn-btn-default(type="button", title="to start", data-ng-click="restart()")
                i.fa.fa-backward
              button.btn-btn-default(type="button", title="to previous swap", data-ng-click="prevSwap()")
                i.fa.fa-fast-backward
              button.btn-btn-default(type="button", title="to previous step", data-ng-click="prevStep()")
                i.fa.fa-step-backward
              button.btn-btn-default(type="button", title="to next step", data-ng-click="nextStep()")
                i.fa.fa-step-forward
              button.btn-btn-default(type="button", title="to next swap", data-ng-click="nextSwap()")
                i.fa.fa-fast-forward
              button.btn-btn-default(type="button", title="to end", data-ng-click="finish()")
                i.fa.fa-forward
            .btn-group
              button.btn-btn-default(type="button", title="randomize", data-ng-click="randomize()")
                i.fa.fa-random
    script(src="../js/dsa.js", type="text/javascript", charset="utf-8")
